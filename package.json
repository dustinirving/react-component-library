{
  "name": "tailwind-component-library",
  "version": "1.0.0",
  "description": "A React component library styled with tailwind.",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    "./themes.css": {
      "import": "./dist/esm/themes.css",
      "require": "./dist/cjs/themes.css",
      "default": "./dist/cjs/themes.css"
    },
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json && ./bin/build-types.sh && npm run build-css",
    "build-css": "cpx \"src/**/*.css\" dist/esm && cpx \"src/**/*.css\" dist/cjs",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "lint": "npm run lint:types",
    "lint:types": "tsc --noEmit",
    "start": "npm run storybook",
    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "storybook:export": "build-storybook",
    "prepublishOnly": "npm run build",
    "deploy": "npm run build-storybook && gh-pages -d storybook-static && rm -r storybook-static",
    "prepare": "husky install && npm run build",
    "pretty-quick": "pretty-quick",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dustinirving/tailwind-component-library.git"
  },
  "author": "Dustin Irving",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dustinirving/tailwind-component-library/issues"
  },
  "homepage": "https://github.com/dustinirving/tailwind-component-library#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.5",
    "@storybook/react": "^7.6.5",
    "@storybook/react-vite": "^7.6.5",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "cpx": "^1.5.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.0",
    "postcss": "^8.4.20",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^20.1.1",
    "semantic-release-cli": "^5.4.4",
    "storybook": "^7.6.5",
    "storybook-dark-mode": "^3.0.3",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.5.1"
  },
  "dependencies": {
    "classnames": "^2.3.2"
  }
}
